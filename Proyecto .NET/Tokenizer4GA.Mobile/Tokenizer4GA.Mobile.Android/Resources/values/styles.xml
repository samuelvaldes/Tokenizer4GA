<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="LaunchTheme" parent="MainTheme">
    <item name="android:windowBackground">@color/launcher_background</item>
  </style>

  <style name="MainTheme" parent="MainTheme.Base">
	  <item name="android:textAllCaps">false</item>
  </style>

  <style name="MainTheme.Base" parent="Theme.AppCompat.Light">
    <item name="android:editTextStyle">@style/InputTextProperties</item>
    <item name="editTextStyle">@style/InputTextProperties</item>
    <item name="android:textViewStyle">@style/TextViewProperties</item>
    <item name="android:datePickerStyle">@style/datepicker</item>
    <item name="android:navigationBarColor">@color/colorPrimary</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowActionBar">false</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="windowNoTitle">true</item>
    <item name="colorControlNormal">@color/colorWhite</item>
    <item name="colorControlActivated">@color/colorWhite</item>
  </style>

  <style name="MainTheme.Splash" parent ="Theme.AppCompat.NoActionBar">
    <item name="android:navigationBarColor">@color/launcher_background</item>
    <item name="android:windowBackground">@drawable/launch_screen</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:windowActionModeOverlay">true</item>
  </style>

  <style name="datepicker" parent="@android:style/Widget.DeviceDefault.DatePicker">
    <item name="android:editTextStyle">@style/InputTextProperties</item>
    <item name="editTextStyle">@style/InputTextProperties</item>
    <item name="android:editTextBackground">@android:color/transparent</item>
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
  </style>
  
  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="InputTextProperties" parent="@android:style/Widget.EditText">
    <item name="android:background">@android:color/transparent</item>
    <item name="android:colorBackground">@android:color/transparent</item>
    <item name="android:textColor">@color/colorWhite</item>
    <item name="boxStrokeColor">@color/colorWhite</item>
    <item name="colorControlNormal">@color/colorWhite</item>
    <item name="colorControlActivated">@color/colorWhite</item>
  </style>

  <style name="TextViewProperties" parent="Widget.AppCompat.TextView">
    <item name="android:background">@android:color/transparent</item>
    <item name="android:colorBackground">@android:color/transparent</item>
    <item name="android:textColor">@color/colorWhite</item>
  </style>
</resources>